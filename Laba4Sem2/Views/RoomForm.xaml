<Window x:Class="Laba4Sem2.Views.RoomForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba4Sem2.Views"
        mc:Ignorable="d"
        Title="NewRoom" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- row1 -->
        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <TextBlock Text="Room type"
                       FontSize="20"
                       Margin="0,0,0,5"/>

            <ComboBox x:Name="roomType"
                      Width="200" Height="25"
                      FontSize="15"
                      HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- row2 -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.Row="1">

            <TextBlock Text="Room size"
                       FontSize="20"
                       Margin="0,0,0,5"/>

            <TextBox x:Name="roomSize"
                     Width="200" Height="25"
                     FontSize="15"
                     HorizontalContentAlignment="Stretch"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- row3 -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.Row="2">

            <TextBlock Text="Cleaning cost"
                       FontSize="20"
                       Margin="0,0,0,5"/>

            <TextBox x:Name="cleaningCost"
                     Width="200" Height="25"
                     FontSize="15"
                     HorizontalContentAlignment="Stretch"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- row4 -->
        <Button Grid.Row="3" HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20" Padding="10"
                Content="Submit"
                Click="Submit"
                Cursor="Hand"></Button>
    </Grid>
</Window>
