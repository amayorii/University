<Window x:Class="Laba4Sem2.Views.SaveAndClose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba4Sem2.Views"
        mc:Ignorable="d"
        Title="SaveAndClose" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="50" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Do you want to save and quit?"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            
            <Button Content="Yes"
                    FontSize="30"
                    Padding="50,5,50,5"
                    VerticalAlignment="Center"
                    Click="Yes_Click"
                    Margin="50,0,50,0"/>
            
            <Button Content="No"
                    FontSize="30"
                    Padding="50,5,50,5"
                    VerticalAlignment="Center"
                    Click="No_Click"
                    Margin="50,0,50,0"/>
        </StackPanel>
    </Grid>
</Window>
